<div class="page-header">
  <h3>Contact Form</h3>
</div>

<form role="form" method="POST" class="form-horizontal">
  <div class="form-group">
    <label for="email" class="col-sm-2 control-label">Name</label>

    <div class="col-sm-8">
      <input type="name" name="name" id="name" autofocus="" class="form-control">
    </div>
  </div>

  <div class="form-group">
    <label for="email" class="col-sm-2 control-label">Email</label>

    <div class="col-sm-8">
      <input type="text" name="email" id="email" class="form-control">
    </div>
  </div>

  <div class="form-group">
    <label for="contactBody" class="col-sm-2 control-label">Body</label>

    <div class="col-sm-8">
      <textarea type="text" name="message" id="message" rows="7" class="form-control"></textarea>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-8">
      <button type="submit" class="btn btn-default">
        <i class="fa fa-mail-forward"></i>
        Send
      </button>

      <img height="34" src="/img/sendgrid.png" class="pull-right">
    </div>
  </div>
</form>